@model List<Web.ViewModels.NaturezaOperacaoViewModel>

@{
    ViewData["Title"] = "Natureza Operação";
}

<div class="conteudo">   
    <h3 class="text-center"><i>Natureza de Operações Cadastradas</i></h3><br>

    <p>
        <a asp-action="CreateNaturezaOperacao" class="btn btn-outline-info">Adicionar Nova Natureza Operação</a>
    </p>

    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th style="width:70%">
                    @Html.DisplayNameFor(model => model[0].Descricao)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descricao)
                    </td>
                    <td class="text-right">
                        <a asp-controller="Administracao" asp-action="DetalhesNaturezaOperacao" class="btn btn-info"><span class="fa fa-search"/></a>
                        <a asp-controller="Administracao" asp-action="UpdateNaturezaOperacao" class="btn btn-warning"><span class="fa fa-pencil-alt" /></a>
                        <a asp-controller="Administracao" asp-action="DeleteNaturezaOpercao" asp-route-id="@item.Id" class="btn btn-danger"><span class="fa fa-trash" /></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
